@model string
@{
    ViewBag.Title = "Doctors page";
    Layout = "~/Areas/admin/Views/adminLayout.cshtml";
}
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script src="~/Areas/Admin/js/jtable/jquery.jtable.min.js"></script>
<link href="~/Areas/Admin/js/jtable/themes/metro/blue/jtable.css" rel="stylesheet" />
<link href="~/Content/validationEngine.jquery.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validationEngine.js"></script>
<script src="~/Scripts/jquery.validationEngine-ar.js"></script>
<script src="~/Areas/Admin/js/doctors.js"></script>
<h2 class="pageHeader">صفحة الاطباء</h2>
<div class="container-fluid">
    <div class="filtering">
        <form class="form-inline">
            <div class="form-group">
                <label>اسم الطبيب:</label>
                 <input class="form-control" type="text" name="doctorName" id="docName" @if (Model == "noProfile") { Write("disabled"); }/>
            </div>
            <label>تاريخ التسجيل:</label> 
            <input class="form-control" type="date" name="dateOfregister" id="dateOfregister" />
            <button type="submit" id="LoadRecordsButton" class="btn btn-danger"><i class="fa fa-search"></i> ابحث</button>
        </form>
    </div>
    <div id="doctors" data-model="@Model">

    </div>
</div>
<!--this modal is for viewing doctor details-->
<div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">عرض معلومات الطبيب</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4 col-xs-12 adminImage">
                            <img class="img-responsive img-thumbnail center-block" src="" />
                            <div class="imageControls hidden-xs">
                                Full Screen <i class="glyphicon glyphicon-fullscreen" onclick="fillScreenImage($('.adminImage img'),this)"></i>
                            </div>
                        </div>
                        <div class="col-md-8 col-xs-12">
                            <table class="table table-bordered table-hover table-responsive">
                                <thead>
                                    <tr>
                                        <th data-value='name'>
                                            الاسم
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='dateOfJoin'>
                                            تاريخ التسجيل
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='phone'>
                                            رقم الهاتف
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='mail'>
                                            البريد الالكترونى
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='type'>
                                            النوع
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='periority'>
                                            سعر الكشف
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='periority'>
                                            التخصص
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='periority'>
                                            اللقب
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='periority'>
                                            محافظة
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='periority'>
                                            منطقة
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='periority'>
                                            عدد الحجوزات الكلية
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-value='periority'>
                                            حجوزات اليوم
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                شكرا على اطلاعك
            </div>
        </div>
    </div>
</div>


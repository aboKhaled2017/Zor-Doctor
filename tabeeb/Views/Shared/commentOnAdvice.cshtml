@using tabeeb.Areas.doctors.languages
@{
    string arrowDirection = (Html.getCurrentlanguage() == "en") ? "fa-arrow-left" : "fa-arrow-right";
    var isUserLoggedIn = User.Identity.IsAuthenticated;
}
<div class="modal fade" id="commentsOnAdvice" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>*@
                <button type="button" class="close pull-right" data-dismiss="modal">×</button>
                <button class="pull-left btn btn-default newComments hidden">
                    <i class="fa @arrowDirection"></i>
                </button>
                <button class="pull-left oldComments btn btn-default hidden">@Resource1.showMoreComments
                   <span class="hint"></span>
                </button>               
            </div>
            <div class="modal-body">
                    <div class="all-comments">                       
                        <div class="loadingComment">@Resource1.loadingComments <i class="fa fa-circle-o-notch fa-spin"></i></div>
                        <div class="container-fluid comments">
                            <!--comments are loaded here by javascript-->
                        </div>
                        <!--form control is hidden now in doctor site-->
                        <form id="addCommentForm" class="form-inline text-center hidden">
                            <div class="form-group">
                                @if(!isUserLoggedIn)
                                {
                                    <p class="alert alert-warning">@Resource1.loginForCommenting</p>
                                }
                                <textarea @if (!isUserLoggedIn) { Write("disabled"); }  class="form-control" placeholder="@Resource1.giveYourComment"></textarea>
                                <button @if (!isUserLoggedIn) { Write("disabled"); } type="button" class="btn btn-primary"><i class="fa fa-comment-o fa-lg"></i> @Resource1.addComment</button>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>